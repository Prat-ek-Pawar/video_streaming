RewriteEngine On

# FORCE CORS HEADERS at Apache level
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization"
</IfModule>

# Handle OPTIONS requests directly (Optional, but helps with preflight speed/reliablity)
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# If the request is for a real file or directory, serve it normally
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Otherwise, proxy everything to Node.js
RewriteRule ^(.*)$ http://127.0.0.1:3000/$1 [P,L]

# Hide directory listing if something goes wrong
Options -Indexes
